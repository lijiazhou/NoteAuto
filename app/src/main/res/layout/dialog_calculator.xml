<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:background="@drawable/blur_transparent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <View
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/round_button"
            android:layout_margin="5dp"
            android:id="@+id/calculatorExit"/>
    </LinearLayout>
    <TextView
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:singleLine="true"
        android:gravity="right"
        android:textColor="@color/colorWhite"
        android:textSize="60dp"
        android:layout_gravity="center"
        android:text="0"
        android:id="@+id/calculatorNumber"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/buttonClear"
            android:text="C"
            android:textSize="25dp"
            android:background="@drawable/button_border_white"/>
        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/buttonMinus"
            android:text="-/+"
            android:textSize="20dp"
            android:background="@drawable/button_border_white"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/buttonClear" />
        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/reminder"
            android:text="%"
            android:textSize="25dp"
            android:background="@drawable/button_border_white"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/buttonMinus" />
        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/buttonDivide"
            android:text="/"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_border_orange"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/reminder" />
        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/num7"
            android:text="7"
            android:textSize="25dp"
            android:background="@drawable/button_border_white"
            android:layout_below="@+id/buttonClear"
            android:layout_alignParentStart="true" />
        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/num8"
            android:text="8"
            android:textSize="25dp"
            android:background="@drawable/button_border_white"
            android:layout_below="@+id/buttonClear"
            android:layout_toEndOf="@+id/num7" />
        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/num9"
            android:text="9"
            android:textSize="25dp"
            android:background="@drawable/button_border_white"
            android:layout_below="@+id/buttonMinus"
            android:layout_toEndOf="@+id/num8" />
        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/buttonMultiple"
            android:text="*"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_border_orange"
            android:layout_below="@+id/reminder"
            android:layout_toEndOf="@+id/reminder" />
        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/num4"
            android:text="4"
            android:textSize="25dp"
            android:background="@drawable/button_border_white"
            android:layout_below="@+id/num7"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/num5"
            android:text="5"
            android:textSize="25dp"
            android:background="@drawable/button_border_white"
            android:layout_below="@+id/num8"
            android:layout_toStartOf="@+id/num9" />

        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/num6"
            android:text="6"
            android:textSize="25dp"
            android:background="@drawable/button_border_white"
            android:layout_below="@+id/num9"
            android:layout_toStartOf="@+id/buttonMultiple" />

        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/num1"
            android:text="1"
            android:textSize="25dp"
            android:background="@drawable/button_border_white"
            android:layout_below="@+id/num4"
            android:layout_alignParentStart="true" />

        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/num2"
            android:text="2"
            android:textSize="25dp"
            android:background="@drawable/button_border_white"
            android:layout_above="@+id/num0"
            android:layout_toStartOf="@+id/num3" />

        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/num3"
            android:text="3"
            android:textSize="25dp"
            android:background="@drawable/button_border_white"
            android:layout_below="@+id/num6"
            android:layout_toStartOf="@+id/buttonMultiple" />

        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/buttonPlus"
            android:text="+"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_border_orange"
            android:layout_alignTop="@+id/num6"
            android:layout_alignStart="@+id/buttonMultiple" />

        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/buttomReduce"
            android:text="*"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_border_orange"
            android:layout_below="@+id/buttonPlus"
            android:layout_alignStart="@+id/buttonPlus" />

        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/num0"
            android:text="0"
            android:textSize="25dp"
            android:background="@drawable/button_border_white"
            android:layout_below="@+id/num1"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/num2"
            android:layout_alignEnd="@+id/num2" />

        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/numDot"
            android:text="."
            android:textSize="25dp"
            android:background="@drawable/button_border_white"
            android:layout_below="@+id/num2"
            android:layout_toEndOf="@+id/num5" />

        <Button
            android:layout_width="75dp"
            android:layout_height="70dp"
            android:id="@+id/buttonEqual"
            android:text="="
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_border_orange"
            android:layout_alignTop="@+id/numDot"
            android:layout_alignStart="@+id/buttomReduce" />
    </RelativeLayout>
</LinearLayout>